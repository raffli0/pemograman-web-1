<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /asset_management/public/
    
    # Only route /api/ requests to index.php
    # Don't touch static files (js, css, images, etc)
    RewriteRule ^api/(.*)$ index.php [L,QSA]
</IfModule>

# Security: Disable directory browsing
Options -Indexes

# Security: Protect sensitive files
<FilesMatch "\.(env|git|htaccess|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>
